<div>
  <title>Sign Up</title>
  <div class="form-container">
    <div class="button-container">
      <button id="patient-button">Patient</button>
      <button id="clinician-button">Clinician</button>
    </div>

    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :first_name, required: true %>
        <%= f.input :last_name, required: true %>
        <%= f.input :date_of_birth, as: :date, required: true %>
        <%= f.input :gender_at_birth, required: true %>
        <%= f.input :phone_number, required: true %>
        <%= f.input :nhs_number, required: true %>
        <%= f.input :home_address, required: true %>
        <%= f.input :home_town, required: true %>
        <%= f.input :home_postcode, required: true %>

        <%= f.input :clinician, as: :hidden, input_html: { value: false }, id: 'clinician-field' %>

        <div id="clinicianFields">
          <%= f.input :job_title %>
          <%= f.input :work_gpname %>
          <%= f.input :work_gpaddress %>
          <%= f.input :work_gptown %>
          <%= f.input :work_gppostcode %>
          <%= f.input :gp_name %>
          <%= f.input :practice_doctorname %>
          <%= f.input :practice_address %>
          <%= f.input :practice_town %>
          <%= f.input :practice_postcode %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

<script>
    // JavaScript to toggle the visibility of the clinician fields and set the clinician field value
    document.getElementById('clinician-button').addEventListener('click', function() {
      document.getElementById('clinicianFields').style.display = 'block';
      document.getElementById('clinician-field').value = true;
    });

    document.getElementById('patient-button').addEventListener('click', function() {
      document.getElementById('clinicianFields').style.display = 'none';
      document.getElementById('clinician-field').value = false;
    });
  </script>
</div>
